<% layout('layouts/layout') -%>


<div class="row">
            <div class="col-md-12">
                      <div class="panel panel-danger">
                        <div class="panel-heading">
                          <h3 class="panel-title">Edit my frag</h3>
                        </div>
                        <div class="panel-body">
                          <img src="img/logo2_small_v1.png" alt="" class="submit-img">
                          <div class="form-horizontal">
                            <form action="/edit-frag/<%= findFrag._id %>" method="post">
                            <div class="form-group">
                              <label class="col-sm-2 control-label">Title:</label>
                              <div class="col-sm-10">
                                <input type="text" value="<%= findFrag.title %>" class="form-control" name="title" required="true">
                              </div>
                            </div>
                            <div class="form-group">
                              <label class="col-sm-2 control-label">Category:</label>
                              <div class="col-sm-10">
                                <select placeholder="Select" class="selectpicker form-control bs-select-hidden" name="category">
                                  <option>Ace</option>
                                  <option>Clutch</option>
                                  <option>Ninja</option>
                                  <option>Pistol</option>
                                  <option>Pros</option>
                                  <option>Funny</option>

                                </select>
                              </div>
                            </div>

                            <div class="form-group">
                              <label class="col-sm-2 control-label">YouTube ID:</label>
                              <div class="col-sm-10">
                                <input type="Video ID" value="<%= findFrag.videoLink %>" class="form-control" name="videoLink" required="true" maxlength="15">

                              </div>
                            </div>
                              <div class="form-group">
                              <label class="col-sm-2 control-label"></label>
                              <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">EDIT</button>
                              </div>
                            </div>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
</div>
